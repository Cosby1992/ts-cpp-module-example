{
  "name": "@cosby/native-basic-math",
  "version": "1.0.3",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/",
    "build/Release/basic-math.node",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cosby1992/ts-cpp-module-example"
  },
  "author": "Cosby",
  "bugs": {
    "url": "https://github.com/Cosby1992/ts-cpp-module-example/issues"
  },
  "keywords": [
    "node-addon",
    "native-module",
    "math",
    "C++",
    "typescript"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:cpp && yarn build:ts",
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "clean": "rimraf dist && yarn gyp:clean",
    "test": "jest",
    "build:ts": "npm run build:cjs && npm run build:esm",
    "build:cpp": "yarn gyp:clean && yarn gyp:configure && yarn gyp:build",
    "gyp:clean": "node-gyp clean",
    "gyp:configure": "node-gyp configure",
    "gyp:build": "node-gyp build",
    "gyp:rebuild": "node-gyp rebuild",
    "prepublishOnly": "yarn build && yarn test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.3.0",
    "jest": "^29.7.0",
    "node-addon-api": "^8.1.0",
    "node-gyp": "^10.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
